{
    "name": "background-online",
    "displayName": "background-online",
    "description": "Add a picture you like to cover the entire vscode..",
    "version": "2.0.3",
    "publisher": "helin",
    "signature": {
        "type": "microsoft",
        "version": "1.0.0"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "icon": "resources/background-online.jpeg",
    "galleryBanner": {
        "color": "#03385a",
        "theme": "dark"
    },
    "categories": [
        "Themes"
    ],
    "keywords": [
        "Background",
        "Theme"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "license": "ISC",
    "main": "./out/extension",
    "extensionKind": [
        "ui"
    ],
    "files": [
        "out/**/*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.backgroundOnline.start",
                "title": "background - start"
            }
        ],
        "keybindings": [
            {
                "command": "extension.backgroundOnline.refresh",
                "key": "ctrl+shift+f7",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "background-online config",
            "properties": {
                "backgroundOnline.opacity": {
                    "type": "number",
                    "maximum": 1,
                    "minimum": 0,
                    "default": 0.2,
                    "description": "背景透明度(0 - 1)"
                },
                "backgroundOnline.currentBg": {
                    "type": "string",
                    "default": "",
                    "description": "当前壁纸地址"
                },
                "backgroundOnline.configured": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否完成初始化"
                },
                "backgroundOnline.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否启用插件"
                },
                "backgroundOnline.autoStatus": {
                    "type": "boolean",
                    "default": true,
                    "description": "每次启动时自动更换背景"
                },
                "backgroundOnline.category": {
                    "type": "object",
                    "default": {
                        "name": "动漫",
                        "parameters": "&lx=dongman"
                    },
                    "description": "选择的壁纸类型"
                },
                "backgroundOnline.bgApiUrl": {
                    "type": "string",
                    "default": "https://api.btstu.cn/sjbz/api.php?format=json",
                    "description": "壁纸api"
                },
                "backgroundOnline.bgImgUrlKey": {
                    "type": "string",
                    "default": "imgurl",
                    "description": "壁纸api返回值中壁纸的真实地址key"
                },
                "backgroundOnline.categoryList": {
                    "type": "array",
                    "default": [
                        {
                            "name": "动漫",
                            "parameters": "&lx=dongman"
                        },
                        {
                            "name": "妹纸",
                            "parameters": "&lx=meizi"
                        },
                        {
                            "name": "风景",
                            "parameters": "&lx=fengjing"
                        },
                        {
                            "name": "随机",
                            "parameters": "&lx=suiji"
                        }
                    ],
                    "description": "自定义类型"
                },
                "backgroundOnline.history": {
                    "type": "array",
                    "default": [],
                    "description": "使用过的壁纸"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "vscode:uninstall": "node ./out/uninstall",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "check": "tslint -p ./"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.10.6",
        "@types/node-fetch": "^2.6.9",
        "typescript": "^5.3.3",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "node-fetch": "^2.7.0"
    }
}